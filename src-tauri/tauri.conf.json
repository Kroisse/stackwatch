{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stackwatch",
  "version": "0.1.0",
  "identifier": "se.krois.stackwatch.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "stackwatch",
        "width": 800,
        "height": 600,
        "label": "main"
      },
      {
        "title": "",
        "width": 300,
        "height": 80,
        "label": "floating",
        "url": "floating.html",
        "alwaysOnTop": true,
        "minimizable": false,
        "closable": false,
        "titleBarStyle": "Overlay",
        "skipTaskbar": true,
        "visible": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
